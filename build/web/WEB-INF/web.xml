    <servlet>
        <servlet-name>verifyOtp</servlet-name>
        <servlet-class>verifyOtp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendOtp</servlet-name>
        <servlet-class>.sendOtp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>send_Otp</servlet-name>
        <servlet-class>.sendOtp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verify_Otp</servlet-name>
        <servlet-class>verifyOtp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>otpSend</servlet-name>
        <servlet-class>.otpSend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>otpVerify</servlet-name>
        <servlet-class>otpVerify</servlet-class>
