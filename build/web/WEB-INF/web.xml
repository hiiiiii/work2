        <url-pattern>/otp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifyOtp</servlet-name>
        <url-pattern>/verifyOtp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendOtp</servlet-name>
        <url-pattern>/sendOtp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>send_Otp</servlet-name>
