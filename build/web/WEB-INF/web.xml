    <servlet-mapping>
        <servlet-name>verify_Otp</servlet-name>
        <url-pattern>/verify_Otp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>otpSend</servlet-name>
        <url-pattern>/otpSend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>otpVerify</servlet-name>
        <url-pattern>/otpVerify</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
